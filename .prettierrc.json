{
    "arrowParens": "avoid",
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "all",
    "plugins": ["prettier-plugin-solidity", "@trivago/prettier-plugin-sort-imports"],
    "overrides": [
        {
            "files": ["**/*.ts"],
            "options": {
                "parser": "typescript",
                "arrowParens": "avoid",
                "printWidth": 100,
                "tabWidth": 4,
                "trailingComma": "all",
                "singleQuote": false,
                "bracketSpacing": true,
                "semi": true,
                "useTabs": true,
                "importOrderSeparation": true,
                "importOrderSortSpecifiers": true,
                "importOrder": [
                    "^.*config.*",
                    "^(node:.*|assert|buffer|child_process|cluster|crypto|dgram|dns|events|fs|http|https|net|os|path|punycode|querystring|readline|stream|string_decoder|tls|url|util|v8|vm|worker_threads|zlib)(/.*)?$",
                    "^\\u0000",
                    "^@?\\w",
                    "^(viem|ethers|hardhat)",
                    "^@concero(/.*)?$",
                    "^@lanca(/.*)?$",
                    "^contracts/(.*)$",
                    "^@(.*)$",
                    "^[./]",
                    "^@tenderly/hardhat-tenderly$"
                ]
            }
        },
        {
            "files": "*.sol",
            "options": {
                "parser": "slang",
                "printWidth": 100,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": false
            }
        },
        {
            "files": "./clf/src/**",
            "options": {
                "tabWidth": 4,
                "arrowParens": "avoid",
                "printWidth": 120,
                "trailingComma": "all",
                "singleQuote": false,
                "bracketSpacing": true,
                "semi": true
            }
        }
    ]
}
