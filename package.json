{
    "name": "@lanca/lcb-stablecoin-evm",
    "version": "1.0.0",
    "license": "UNLICENSED",
    "bugs": "security@lanca.io",
    "homepage": "https://lanca.io",
    "description": "Lanca Canonical Bridging Framework Contracts. If you discover any security vulnerabilities, report them responsibly to security@lanca.io. Thank you!",
    "scripts": {
        "chain": "hardhat node --network hardhat --no-deploy",
        "fork": "ETHEREUM_FORKING_ENABLED=true hardhat node --network hardhat --no-deploy",
        "compile": "hardhat compile",
        "lint": "npm run lint:ts",
        "lint:ts": "eslint --config .eslint.config.mjs",
        "format:ts": "prettier --config .prettierrc.json --write *.ts **/*.ts **/**/*.ts **/**/**/*.ts",
        "clean:hardhat": "rm -rf ./artifacts ./cache ./coverage ./typechain-types ./deployments",
        "clean:forge": "forge clean",
        "clean": "npm run clean:hardhat && npm run clean:forge",
        "size-contracts": "hardhat size-contracts",
        "check-updates": "npx npm-check-updates",
        "upgrade:contract-utils": "yarn cache clean @concero/contract-utils && yarn upgrade @concero/contract-utils"
    },
    "devDependencies": {
        "@chainlink/env-enc": "1.0.5",
        "@concero/contract-utils": "https://github.com/concero/contract-utils#feature/v3/export-generic-deploy",
        "@concero/rpcs": "github:concero/rpcs",
        "@concero/v2-contracts": "github:concero/messaging-contracts-v2#feature/v3/dev",
        "@concero/v2-networks": "github:concero/v2-networks",
        "@nomicfoundation/hardhat-ethers": "3.0.8",
        "@nomicfoundation/hardhat-verify": "2.0.12",
        "@nomicfoundation/hardhat-viem": "2.0.6",
        "@tenderly/api-client": "1.1.0",
        "@tenderly/hardhat-tenderly": "2.5.2",
        "@trivago/prettier-plugin-sort-imports": "5.2.2",
        "@typechain/ethers-v6": "0.5.1",
        "@typechain/hardhat": "9.1.0",
        "@typescript-eslint/eslint-plugin": "8.22.0",
        "@typescript-eslint/parser": "8.22.0",
        "dotenv": "16.5.0",
        "envfile": "7.1.0",
        "eslint": "9.19.0",
        "eslint-config-prettier": "10.0.1",
        "eslint-plugin-prettier": "5.2.3",
        "ethers": "6.14.3",
        "hardhat": "2.24.1",
        "hardhat-contract-sizer": "2.10.0",
        "hardhat-deploy": "0.12.4",
        "hardhat-deploy-ethers": "0.4.2",
        "hardhat-gas-reporter": "2.2.2",
        "prettier": "3.4.2",
        "prettier-plugin-solidity": "2.1.0",
        "solidity-coverage": "0.8.14",
        "ts-node": "10.9.2",
        "typechain": "8.3.2",
        "typescript": "5.8.3",
        "viem": "2.24.2"
    },
    "dependencies": {
        "@openzeppelin/contracts": "3.4.2"
    }
}
